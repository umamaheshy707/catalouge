pipeline {
    agent any  // Run on any available agent

    options {
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
    }

    environment {
        PACKAGE_VERSION = "1.0.${env.BUILD_NUMBER}" // Example versioning strategy
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm  // Checks out the source code from version control
            }
        }
        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies for package version ${PACKAGE_VERSION}..."
                sh 'npm install'  // Run npm install to install dependencies
            }
        }
        stage('Build') {
            steps {
                echo "Building package version ${PACKAGE_VERSION}..."
                // Your build command here, e.g., sh 'npm install'
                sh """
                    ls -la
                    zip -r catalogue.zip ./ -x ".git/*" -x "*.zip"
                    ls -ltr
                 """
            }
        }
        stage('Upload Artifact to Nexus') {
            steps {
                script {
                    def nexusUrl = 'http://3.106.127.199:8081/repository/catalouge'
                    def artifactPath = '/var/lib/jenkins/workspace/catalouge/catalouge.zip' // Update this path
                    def nexusUsername = credentials('nexususernameid')
                    def nexusPassword = credentials('nexuspasswordid')

                    echo 'Uploading artifact to Nexus...'
                    
                    sh '''
                        #!/bin/bash
                        set -x  # Enable debug mode
                        curl -u ${nexusUsername}:${nexusPassword} --upload-file ${artifactPath} ${nexusUrl}
                '''
                }
            }
        }
    }
}
